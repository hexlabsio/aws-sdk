{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "./dist",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ESNext",
    "pretty": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
